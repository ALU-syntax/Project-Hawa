    package="com.example.kopihawa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_hawa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_hawa_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".WorkDayActivity"></activity>
        <activity android:name=".GapeActivity" />
