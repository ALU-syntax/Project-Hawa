<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BtnTheme.Target" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/target</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/Primary</item>
    </style>
    <style name="BtnTheme.Achivement" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Achivement</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/Primary</item>
    </style>
    <style name="BtnTheme.WorkDay" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/WorkDay</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/Primary</item>
    </style>
    <style name="BtnTheme.Gape" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Gape</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/Primary</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/orange</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>